<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.krislin.blog.dao.BookDao">

    <resultMap type="club.krislin.blog.pojo.Book" id="BookMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="cover" column="cover" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="date" column="date" jdbcType="VARCHAR"/>
        <result property="press" column="press" jdbcType="VARCHAR"/>
        <result property="abs" column="abs" jdbcType="VARCHAR"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
        <association property="category" javaType="club.krislin.blog.pojo.Category">
            <!-- id：关联查询用户的唯一标识
            column：指定唯 一标识用户信息的列
            javaType：映射到user的哪个属性
             -->
            <id column="id" property="id"/>
            <result column="name" property="name"/>
        </association>
    </resultMap>

    <!--通过分类查询-->
    <select id="findAllByCategory" resultMap="BookMap">
        select
        id, cover, title, author, date, press, abs, cid
        from krislin_blog.book
        where cid = #{id}
    </select>

    <!--通过title和author模糊查询-->
    <select id="findAllByTitleLikeOrAuthorLike"  resultMap="BookMap"></select>

    <!--查询单个-->
    <select id="queryById" resultMap="BookMap">
        select
          id, cover, title, author, date, press, abs, cid
        from krislin_blog.book
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BookMap">
        select
          id, cover, title, author, date, press, abs, cid
        from krislin_blog.book
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BookMap">
        select
          id, cover, title, author, date, press, abs, cid
        from krislin_blog.book
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="cover != null and cover != ''">
                and cover = #{cover}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="author != null and author != ''">
                and author = #{author}
            </if>
            <if test="date != null and date != ''">
                and date = #{date}
            </if>
            <if test="press != null and press != ''">
                and press = #{press}
            </if>
            <if test="abs != null and abs != ''">
                and abs = #{abs}
            </if>
            <if test="cid != null">
                and cid = #{cid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into krislin_blog.book(cover, title, author, date, press, abs, cid)
        values (#{cover}, #{title}, #{author}, #{date}, #{press}, #{abs}, #{cid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update krislin_blog.book
        <set>
            <if test="cover != null and cover != ''">
                cover = #{cover},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="author != null and author != ''">
                author = #{author},
            </if>
            <if test="date != null and date != ''">
                date = #{date},
            </if>
            <if test="press != null and press != ''">
                press = #{press},
            </if>
            <if test="abs != null and abs != ''">
                abs = #{abs},
            </if>
            <if test="cid != null">
                cid = #{cid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from krislin_blog.book where id = #{id}
    </delete>

</mapper>